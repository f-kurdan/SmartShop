// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String   
  role      Role     @default(USER)
  adresses  UserAdress[]
  orders    Order[]
}

model UserAdress {
  id Int      @id @default(autoincrement())
  user User     @relation(fields: [userId], references: [id])
  userId Int @map("user_id")
  adressLine  String @map("adress_line")
  city String
  postalCode Int @map("postal_code")
  country String
}

enum Role {
  USER
  ADMIN
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  SKU       String
  slug      String @unique
  price     Int
  images    String[]
  brand     Brand  @relation(fields: [brandId], references: [id])
  brandId   Int @map("brand_id")
  category  Category  @relation(fields: [categoryId], references: [id])
  categoryId Int @map("category_id")
  productInfo ProductInfo[] 
  productInventory ProductInventory?
  order OrderItem? 
}

model ProductInventory {
  id        Int      @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int  @unique @map("product_id")
  quantity  Int
}

model ProductInfo {
  id Int      @id @default(autoincrement())
  name       String
  description String
  product Product @relation(fields: [productId], references: [id])
  productId  Int @map("product_id")
}

model Order {
  id        Int      @id @default(autoincrement())  
  user  User @relation(fields: [userId], references: [id])
  userId Int @map("user_id")
  orderDate DateTime @default(now()) @map("order_date")
  paymentMethod PaymentMethod @map("payment_method")
  shippingAdress String @map("shipping_adress")
  shippingMethod ShippingMehtod @map("shipping_method")
  orderTotal  Int @map("order_total")
  orderStatus String @map("order_status")
  orderItem OrderItem[] 
}

enum ShippingMehtod {
  PICKUP
  DELIVERY
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  product Product @relation(fields: [productId], references: [id])
  productId Int @unique @map("product_id")
  order Order @relation(fields: [orderId], references: [id])
  orderId Int @map("order_id")
  quantity Int
  price Int
}

model Category {
  id        Int      @id @default(autoincrement())
  name String @unique
  product Product[]
  slug String @unique

}

model Brand {
  id        Int      @id @default(autoincrement())
  name String @unique
  product Product[]
  slug String @unique
}


